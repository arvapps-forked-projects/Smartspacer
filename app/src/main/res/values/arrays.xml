        <!-- Lawnchair -->
        <item>app.lawnchair</item>
        <item>app.lawnchair.debug</item>
        <item>app.lawnchair.twelvel</item>
        <item>app.lawnchair.lawnfeed</item>
        <!-- Total Launcher -->
        <item>com.ss.launcher2</item>
        <!-- Hyperion Launcher -->
        <item>projekt.hyperion.dock</item>
        <!-- Rootless Pixel Launcher -->
        <item>amirz.aidlbridge</item>
