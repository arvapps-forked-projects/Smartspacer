        <item>com.google.android.apps.fitness/com.google.android.apps.fitness.v2.widget.HaloAppWidgetProvider</item>
        <item>com.google.android.apps.fitness/com.google.android.apps.fitness.v2.widget.MetricsAppWidgetProvider</item>
        <item>com.google.android.apps.fitness/com.google.android.apps.fitness.v2.widget.SingleMetricAppWidgetProvider</item>
        <!-- Fitbit -->
        <item>com.fitbit.FitbitMobile/com.fitbit.widget.ui.PrimaryGoalWidgetProvider</item>
        <item>com.fitbit.FitbitMobile/com.fitbit.widget.ui.QuickAccessWidgetProvider</item>
